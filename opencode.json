{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "zai-coding": {
      "models": {
        "glm-4.7": {
          "limit": {
            "output":100000,
            "context":150000
          }

        }
      }
    }
  },
  "permission":{
    "bash":{
      "*":"allow",
      "pkill*":"deny",
      "kill*":"deny",
      "rm*":"ask",
      "rmdir*":"ask",
      "shutdown*":"deny",
      "git*":"ask",
      "git log*":"allow",
      "git diff*":"allow",
      "git status*":"allow",
      "pm2*":"ask",
      "pm2*logs*--nostream*":"allow"
    }
  },
  "tools":{
    "*chrome*":false
  }
}
