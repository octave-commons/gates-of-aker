{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "zai-coding": {
      "models": {
        "glm-4.7": {
          "limit": {
            "output":100000,
            "context":150000
          }

        }
      }
    },
    "opencode": {
      "models": {
        "gpt-5-nano":{
          "name":"Zen gpt 5 nano",
          "variants": {
            "default": {
              "limit": {
                "context": 400000,
                "output": 128000
              },
              "reasoningEffort": "high",
              "reasoningSummary": "auto",
              "textVerbosity": "high"
            },
            "fast":{
              "limit": {
                "context": 200000,
                "output": 64000
              },
              "reasoningEffort": "low",
              "reasoningSummary": "auto",
              "textVerbosity": "low"
            }
          }
        },
        "glm-4.7-free": {
          "limit": {
            "output":100000,
            "context":150000
          }

        }
      }
    }
  },
  "permission":{
    "bash":{
      "*":"allow",
      "pkill*":"deny",
      "kill*":"deny",
      "rm*":"ask",
      "rmdir*":"ask",
      "shutdown*":"deny",
      "git*":"ask",
      "git log*":"allow",
      "git diff*":"allow",
      "git status*":"allow",
      "pm2*":"ask",
      "pm2*logs*--nostream*":"allow"
    }
  }
}
